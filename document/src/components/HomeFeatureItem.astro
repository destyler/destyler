---
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<div class="flex flex-col justify-start gap-3 md:gap-4 h-full">
  <div class="flex items-center justify-center shrink-0 bg-background rounded border border-border text-primary size-10 md:size-12">
    <slot name="icon" />
  </div>
  <h3 class="text-lg font-600 text-foreground">
    {title}
  </h3>
  <p class="text-foreground text-op-60">
    {description}
  </p>
</div>
