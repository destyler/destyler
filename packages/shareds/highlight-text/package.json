{
  "name": "@destyler/highlight-text",
  "type": "module",
  "version": "0.2.1-beta.1",

  "description": "Highlight a portion of text in a string",
  "author": "Elone Hoo <elonehoo@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/destyler/destyler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/destyler/destyler.git",
    "directory": "packages/shareds/highlight-text"
  },
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "clear:node_modules": "rimraf ./node_modules",
    "prepublishOnly": "pnpm run build",
    "build": "pnpm run clear && tsdown",
    "watch": "tsdown --watch"
  },
  "publishConfig": {
    "access": "public"
  }
}
