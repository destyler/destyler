{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
