{
  "name": "@destyler/popper",
  "type": "module",
  "version": "0.0.6",
  "description": "popper is a component that allows you to create popups, tooltips, and dropdowns.",
  "author": "Elone Hoo <elonehoo@gmail.com>",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./resolver": {
      "types": "./dist/resolver.d.mts",
      "default": "./dist/resolver.mjs"
    },
    "./component": {
      "types": "./dist/component.d.mts",
      "default": "./dist/component.mjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "prepublishOnly": "pnpm run build",
    "build": "pnpm run clear && unbuild",
    "stub": "unbuild --stub"
  },
  "peerDependencies": {
    "vue": ">=3.4.21"
  },
  "dependencies": {
    "@destyler/arrow": "workspace:*",
    "@destyler/composition": "workspace:*",
    "@destyler/primitive": "workspace:*",
    "@destyler/shared": "workspace:*",
    "@floating-ui/vue": "^1.0.6"
  }
}
