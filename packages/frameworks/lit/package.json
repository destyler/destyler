{
  "name": "@destyler/lit",
  "type": "module",
  "version": "0.2.0-beta.5",

  "description": "the lit wrapper for destyler",
  "author": "Elone Hoo <elonehoo@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/destyler/destyler",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/destyler/destyler.git",
    "directory": "packages/frameworks/lit"
  },
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "*.d.ts",
    "dist"
  ],
  "scripts": {
    "clear": "rimraf ./dist",
    "clear:node_modules": "rimraf ./node_modules",
    "prepublishOnly": "pnpm run build",
    "build": "pnpm run clear && tsdown",
    "watch": "tsdown --watch"
  },
  "peerDependencies": {
    "lit": ">=3.2.0"
  },
  "dependencies": {
    "@destyler/store": "workspace:*",
    "@destyler/types": "workspace:*",
    "@destyler/xstate": "workspace:*",
    "proxy-compare": "catalog:prod"
  },
  "devDependencies": {
    "@destyler/utils": "workspace:*",
    "lit": "catalog:frontend"
  },
  "publishConfig": {
    "access": "public"
  }
}
