{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "node"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "./tsconfig.test.json"
    }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
