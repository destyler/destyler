  "license": "MIT",
  "keywords": [
    "vue component",
    "unstyle"
  ],
  "scripts": {
    "build": "pnpm run --filter \"./packages/**\" -r build",
    "play": "pnpm -C playground run dev",
    "example:vue": "pnpm -C example/vue run dev",
    "example:unplugin": "pnpm -C example/unplugin run dev",
    "docs:dev": "pnpm -C docs run dev",
    "test": "vitest",
    "test:ui": "vitest --ui --open false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build",
    "release": "bumpp package.json packages/*/package.json packages/**/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.1",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vue/test-utils": "^2.4.3",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "unplugin-auto-import": "^0.17.3",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "vue": "^3.3.13",
    "vue-tsc": "^1.8.27"
  }
