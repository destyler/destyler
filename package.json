{
  "name": "@destyler/monorepo",
  "type": "module",
  "version": "0.0.3",
  "private": true,
  "author": "Elone Hoo <elonehoo@gmail.com>",
  "license": "MIT",
  "keywords": [
    "vue component",
    "unstyle"
  ],
  "scripts": {
    "build": "pnpm run --filter \"./packages/**\" -r build && pnpm run component:count",
    "play": "pnpm -C playground run dev",
    "play:vue": "pnpm -C examples/vue run dev",
    "play:nuxt": "pnpm -C examples/nuxt run dev",
    "docs:dev": "pnpm -C docs run dev",
    "test": "vitest",
    "test:ui": "vitest --ui --open false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build",
    "remove:branch": "git branch | grep -v \"main\" | xargs git branch -D",
    "release": "tsx scripts/release.ts",
    "component:count": "tsx scripts/component-count-number.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.6.3",
    "@destyler/icon": "workspace:*",
    "@destyler/link": "workspace:*",
    "@destyler/test": "workspace:*",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.24",
    "@unocss/reset": "^0.58.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/runtime-core": "^3.3.4",
    "@vue/shared": "^3.3.4",
    "@vue/test-utils": "^2.4.4",
    "bumpp": "^9.4.0",
    "consola": "^3.2.3",
    "eslint": "^8.57.0",
    "export-size": "^0.7.0",
    "filesize": "^10.1.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^24.0.0",
    "ofetch": "^1.3.3",
    "rimraf": "^5.0.5",
    "taze": "^0.13.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "unocss": "^0.58.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.1.5",
    "vitest": "^1.3.1",
    "vitest-axe": "^0.1.0",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.3.4",
    "vue-tsc": "^2.0.4"
  }
}
